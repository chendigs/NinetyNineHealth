<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="health.warriors.ninetyninehealth.AnxietyActivity"
    android:background="@android:color/holo_blue_light">

    <ImageButton

        android:drawableTop="@drawable/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anxietyimageButton"
        android:background="@drawable/blue"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/ratingdepressionBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/depressionView"
        android:layout_alignEnd="@+id/depressionView"
        android:baselineAlignBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/anxietyView"
        android:textColor="@android:color/primary_text_dark"
        android:background="@android:color/holo_blue_light"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/ratinganxietyBar"
        android:layout_below="@+id/textView2"
        android:text="Disclaimer: These suggestions are for entertainment purposes only. Please consult a Medical Professional before making any treatment changes." />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratinganxietyBar"
        android:focusableInTouchMode="false"
        android:layout_above="@+id/anxietyimageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Suggested Alternatives"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:singleLine="true"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>


